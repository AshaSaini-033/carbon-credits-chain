# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/blue_carbon_db
# For local development without PostgreSQL, leave DATABASE_URL empty to use in-memory storage

# Blockchain Configuration
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_RPC_URL=https://polygon-rpc.com
PRIVATE_KEY=your_wallet_private_key_here_for_relayer
REGISTRY_CONTRACT_ADDRESS=0x...
TOKEN_CONTRACT_ADDRESS=0x...

# IPFS Configuration (web3.storage)
WEB3_STORAGE_TOKEN=your_web3_storage_api_token_here

# Security
JWT_SECRET=your_super_secure_jwt_secret_here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# File Upload
MAX_FILE_SIZE=20971520
UPLOAD_PATH=./uploads